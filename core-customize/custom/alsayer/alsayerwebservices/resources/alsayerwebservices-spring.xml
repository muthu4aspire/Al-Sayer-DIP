	<!-- Beans needed for sample code -->
 
	
	<!-- Sample Converters and Populators -->
	<bean id="alsayerwebservicesSampleAddressPopulator" class="com.alsayer.webservices.populators.SampleAddressPopulator" />

	<bean id="alsayerwebservicesSampleAddressConverter" parent="abstractPopulatingConverter">
		<property name="targetClass" value="com.alsayer.webservices.data.AddressData" />
		<property name="populators">
			<list>
				<ref bean="alsayerwebservicesSampleAddressPopulator" />
			</list>
		</property>
	</bean>

	<bean id="alsayerwebservicesSampleUserPopulator" class="com.alsayer.webservices.populators.SampleUserPopulator">
		<property name="addressConverter" ref="alsayerwebservicesSampleAddressConverter" />
	</bean>

	<bean id="alsayerwebservicesSampleUserConverter" parent="defaultPopulatingConverter">
		<property name="targetClass" value="com.alsayer.webservices.data.UserData" />
		<property name="populators">
			<list>
				<ref bean="alsayerwebservicesSampleUserPopulator" />
			</list>
		</property>
	</bean>
	
	<!-- Sample Services -->
	<bean id="alsayerwebservicesSampleUserService" class="com.alsayer.webservices.services.impl.SampleUserServicesImpl" />
	
 	<!-- Sample facades -->
	<alias name="alsayerwebservicesDefaultSampleFacades" alias="alsayerwebservicesSampleFacades"/>
	<bean id="alsayerwebservicesDefaultSampleFacades" class="com.alsayer.webservices.facades.impl.DefaultSampleFacades">
		<property name="userConverter" ref="alsayerwebservicesSampleUserConverter" />
		<property name="sampleUserService" ref="alsayerwebservicesSampleUserService" />
	</bean>
</beans>
