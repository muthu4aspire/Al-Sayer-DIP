<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
        <collectiontype code="serviceTileComponentList"
                        elementtype="ServiceTileCMSComponent" autocreate="true" generate="true"
                        type="list" />
    </collectiontypes>


    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="BLUE"/>
            <value code="BROWN"/>
            <value code="GREEN"/>
            <value code="GREY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="RED"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="YELLOW"/>
        </enumtype>
        <enumtype generate="true" autocreate="true" code="InformationType" dynamic="true">
            <value code="ABOUT_US"/>
            <value code="OUR_BUSINESS"/>
            <value code="OUR_BRANDS"/>
            <value code="NEWS"/>
            <value code="OVERSEAS"/>
            <value code="CONTACT_US"/>
        </enumtype>
    </enumtypes>

    <itemtypes>

        <!-- Add your item definitions here -->


        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.alsayer.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.alsayer.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.alsayer.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Alsayer">
            <itemtype code="AlsayerColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.alsayer.core.jalo.AlsayerColorVariantProduct">
                <description>Alsayer color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
            <itemtype code="ServiceTileCMSComponent" extends="SimpleCMSComponent"
                      autocreate="true" generate="true" abstract="false" jaloclass="com.alsayer.core.jalo.ServiceTileCMSComponent">
                <description>ALSAYER Custom CMS Component with title, icon and color</description>
                <attributes>
                    <attribute qualifier="title" type="localized:java.lang.String">
                        <description>It is localized title of the component.</description>
                        <modifiers read="true" write="true" optional="true"/>
                        <persistence type="property" />
                    </attribute>
                    <attribute qualifier="icon" type="localized:Media">
                        <description>Media for component.</description>
                        <modifiers read="true" write="true" optional="true" />
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="color" type="localized:java.lang.String">
                        <description>Color of the component.</description>
                        <modifiers read="true" write="true" optional="true"/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
            <itemtype code="ServiceTileCollectionComponent"
                      autocreate="true" generate="true" extends="SimpleCMSComponent" jaloclass="com.alsayer.core.jalo.ServiceTileCollectionComponent">
                <description>It represents collection service tile component.</description>
                <attributes>
                    <attribute qualifier="components" type="serviceTileComponentList">
                        <persistence type="property" />
                        <modifiers />
                        <description>A collection of service tile component.</description>
                    </attribute>
                </attributes>
            </itemtype>
            <itemtype code="HomepageInformationComponent" extends="SimpleCMSComponent"
                      autocreate="true" generate="true"
                      jaloclass="com.alsayer.core.jalo.HomepageInformationComponent">
                <description>ALSAYER Homepage Information Component With header, detail, media and url
                </description>
                <attributes>
                    <attribute qualifier="media" type="localized:Media">
                        <description>Display image for representing information.</description>
                        <modifiers read="true" write="true" />
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="header" type="localized:java.lang.String">
                        <description>Information Header.</description>
                        <modifiers read="true" write="true" />
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="detail" type="localized:java.lang.String">
                        <description>Information in detail.</description>
                        <modifiers read="true" write="true" />
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="infoType" type="InformationType">
                        <description>Information type, to apply different conditions.</description>
                        <modifiers read="true" write="true" />
                        <persistence type="property"/>
                    </attribute>
                    <attribute qualifier="link" type="CMSLinkComponent">
                        <description>Information URL.</description>
                        <modifiers read="true" write="true" />
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

    </itemtypes>
</items>
